@model OnlineShop.Models.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
    //string url = null;
    //if (Request.QueryString["returnUrl"] != null)
    //{
    //    url = Request.QueryString["returnUrl"];
    //}
      
}
@section Style{
    <style>
        .backgroud-white{
            background:white !important;
        }
    </style>
}
<div class="content">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default backgroud-white">
                <div class="panel-heading">
                    <h3 class="panel-title">Đăng nhập</h3>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        <fieldset>
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @placeholder = "Tên đăng nhập", @autofocus = "autofocus" })
                            </div>
                            <div class="form-group">
                                @Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = "Mật khẩu" })
                            </div>
                            <div class="checkbox">
                                <label>
                                    @Html.CheckBoxFor(model => model.Remember) Ghi nhớ
                                </label>
                            </div>
                            <!-- Change this to a button or input when using this as a form -->
                            <button type="submit" class="btn btn-lg btn-success btn-block">Đăng nhập</button>
                            <a class="btn btn-lg btn-facebook btn-block" href="/Account/LoginFacebook">
                                <i class="fa fa-facebook"></i>
                                Đăng nhập bằng Facebook
                            </a>
                        </fieldset>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

