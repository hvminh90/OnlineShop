@model Model.EF.Content
@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Style{
    <style>
            .tags 
            {
                background: #DDDDDD;
                padding: 8px 15px 3px;
                clear: both;
            }

            .tags li 
            {
                font-family: Roboto-Bold,Arial,Helvetica,sans-serif;
                font-size: 15px;
                color: blue;
                display: inline-block;
                margin: 0 5px 5px 0;
                padding: 3px 12px 3px;
                background-color:#ffffff
             }   
             .tags a {
                  text-decoration:none !important;
                  color: #000;
             } 
             .tags li:hover {
                  text-decoration:none !important;
                  background:#3366CC;
                   
             }  
             .tags li:first-child:hover {
                 background:#DDDDDD;
             }
             .tags > :first-child
             {
                 font-family: Roboto-Bold,Arial,Helvetica,sans-serif;
                 font-size: 15px;
                 color: blue;
                 display: inline-block;
                 margin: 0 5px 5px 0;    
                 text-transform: uppercase;
                 background-color:#DDDDDD
              }

            .tags ul 
            {
                list-style-type: none;
                list-style: none;
            }
             #container-care {
              overflow: hidden;
              width: 100%;
              display:table-row;
              margin:5px 0px 5px 0px;
            }
            #left-col-care{
              width:30%;
              display:table-cell;
            }
            #right-col-care {
             
              width: 70%;
              display:table-cell;
              vertical-align:top;
              padding-left:5px;
            }
            .title-care {
                 word-break:break-all; 
                 width:100%; 
                 text-align:justify;
            }
            p.title {
                font-size:15px;
                font-weight:bold;
                text-align:justify;
            }
            p.note {
                font-size:12px;
                font-style:italic;
            }
            .padding-left-right-0 {
                padding-left:0px;
                padding-right:0px;
            }
            .margin-top-bottom-15px {
                margin-top:15px;
                margin-bottom:15px;
            }
    </style>
}
