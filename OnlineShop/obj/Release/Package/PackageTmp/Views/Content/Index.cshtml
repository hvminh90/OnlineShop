@model List<Model.EF.Content>
@{
    ViewBag.Title = "Tin tức";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Style{
    <style>
         p.title {
                font-size:15px;
                font-weight:bold;
                text-align:justify;
            }
            p.note {
                font-size:12px;
                font-style:italic;
            }
            .padding-left-right-0 {
                padding-left:0px;
                padding-right:0px;
            }
            .margin-top-bottom-15px {
                margin-top:15px;
                margin-bottom:15px;
            }
    </style>
}
<div class="content">
    <div class="row">
        <div class="col-sm-8">
            @if (Model.Count > 0)
            {
                foreach (var item in Model)
                {
                    <div class="image group margin-top-bottom-15px">
                        <div class="grid images_3_of_1">
                            <a href="/@item.MetaTitle-@item.ID"><img src="@(string.IsNullOrEmpty(item.Image)? "/assets/client/images/no_image.jpg" : item.Image)" alt="" class="img-responsive" /></a>
                        </div>
                        <div class="grid news_desc">
                            <a href="/tin-tuc-detail/@item.MetaTitle-@item.ID"><h3>@item.Name</h3></a>
                            <h4>Posted on @item.CreatedDate.Value.ToString("dd/MM/yyyy") by <span><a href="#">@item.CreatedBy</a></span></h4>
                            <p>@Html.Raw(item.Description)</p>

                        </div>
                    </div>


                }

                if (ViewBag.TotalPage >= 1)
                {
                    var pageDisplay = (int)ViewBag.MaxPage;
                    var totalPage = (int)ViewBag.TotalPage;
                    var currentPage = (int)ViewBag.Page;

                    var startPageIndex = Math.Max(1, currentPage - pageDisplay / 2);
                    var endPageIndex = Math.Min(totalPage, currentPage + pageDisplay / 2);
                    var link = "/tin-tuc";


                    <div class="content-pagenation" style="text-align:left">
                        @if (currentPage > ViewBag.First)
                        {
                            <li><a href="@link/@ViewBag.First">Frist</a></li>
                        }

                        @for (int i = startPageIndex; i <= endPageIndex; i++)
                        {
                            if (currentPage == i)
                            {
                                <li class="active"><a href="@link/@i">@i</a></li>
                            }
                            else
                            {
                                <li><a href="@link/@i">@i</a></li>
                            }
                        }
                        @if (currentPage < totalPage)
                        {
                            <li><a href="@link/@ViewBag.Last">Last</a></li>
                        }

                        <div class="clear"> </div>
                    </div>
                }
            }
            else
            {
                <div class="image group">
                    Không có tin tức nào.
                </div>
            }
        </div>

        <div class="col-sm-4">
